{
  "name": "kukulkan-extension",
  "keywords": [
    "theia-extension"
  ],
  "version": "0.1.0",
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "@theia/core": "latest",
    "@theia/languages": "latest",
    "@theia/monaco": "latest",
    "node-wget": "0.4.2"
  },
  "devDependencies": {
    "rimraf": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "copy-ls": "wget https://github.com/robertovillarejo/kukulkan-grammar/releases/download/v0.0.1/mx.infotec.dads.kukulkan-1.0.0-SNAPSHOT.jar -d ./build/dsl-ls.jar",
    "clean": "rimraf lib",
    "build": "tsc && yarn run copy-ls",
    "watch": "tsc -w"
  },
  "theiaExtensions": [
    {
      "backend": "lib/node/kukulkan-backend-module",
      "frontend": "lib/browser/kukulkan-frontend-module"
    }
  ]
}
